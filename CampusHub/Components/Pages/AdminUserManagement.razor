@page "/admin/users"
@layout Layout.AdminLayout
@using CampusHub.Application.DTO
@using CampusHub.Application.DTO.Admin
@using CurrieTechnologies.Razor.SweetAlert2
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject SweetAlertService Swal

<main class="p-6">
    <section class="flex flex-col md:flex-row md:justify-between md:items-center mb-4">
        <div>
            <h2 class="font-bold text-base leading-5 mb-1">
                User Management
            </h2>
            <p class="text-xs text-gray-500 leading-4">
                Manage student accounts
            </p>
        </div>
        <div class="mt-3 md:mt-0">
            <label class="sr-only" for="search">
                Search users
            </label>
            <input class="w-full md:w-72 text-xs leading-4 text-gray-500 placeholder:text-gray-400 border border-gray-200 rounded-md py-2 px-3 focus:outline-none focus:ring-1 focus:ring-gray-300"
                   id="search"
                   placeholder="Search users by name, email, or student number..."
                   type="search"
                   value="@searchQuery"
                   @oninput="@(e => UpdateSearch(e.Value?.ToString() ?? ""))" />
        </div>
    </section>

    @if (isLoading)
    {
        <div class="text-center py-8">
            <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-gray-900"></div>
            <p class="mt-2 text-gray-600">Loading user data...</p>
        </div>
    }
    else
    {
        <!-- Stats Cards -->
        <section class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-4">
            <div class="border border-gray-200 rounded-lg p-4 text-center">
                <p class="font-bold text-lg leading-6 mb-1">
                    @stats.TotalUsers
                </p>
                <p class="text-xs text-gray-500 leading-4">
                    Total Users
                </p>
            </div>
            <div class="border border-gray-200 rounded-lg p-4 text-center">
                <p class="font-bold text-lg leading-6 mb-1 text-[#0FA90F]">
                    @stats.ActiveUsers
                </p>
                <p class="text-xs text-gray-500 leading-4">
                    Active
                </p>
            </div>
            <div class="border border-gray-200 rounded-lg p-4 text-center">
                <p class="font-bold text-lg leading-6 mb-1 text-[#E11D48]">
                    @stats.BannedUsers
                </p>
                <p class="text-xs text-gray-500 leading-4">
                    Banned
                </p>
            </div>
        </section>

        <!-- Filters -->
        <section class="border border-gray-200 rounded-lg p-4 mb-4">
            <p class="font-bold text-xs leading-4 mb-3">Filter Users</p>
            <div class="flex flex-wrap gap-4">
                <div class="flex-1 min-w-48">
                    <select class="w-full text-xs leading-4 text-gray-700 border border-gray-200 rounded-md py-2 px-3 focus:outline-none focus:ring-1 focus:ring-gray-300"
                            value="@selectedRole"
                            @onchange="@(e => SetRoleFilter(e.Value?.ToString() ?? "all"))">
                        <option value="all">All Roles</option>
                        <option value="Student">Students</option>
                    </select>
                </div>
                <div class="flex-1 min-w-48">
                    <select class="w-full text-xs leading-4 text-gray-700 border border-gray-200 rounded-md py-2 px-3 focus:outline-none focus:ring-1 focus:ring-gray-300"
                            value="@selectedStatus"
                            @onchange="@(e => SetStatusFilter(e.Value?.ToString() ?? "all"))">
                        <option value="all">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Banned">Banned</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- Users Table -->
        <section>
            <div class="border border-gray-200 rounded-lg p-4 text-xs text-gray-700">
                <p class="mb-4 font-semibold">
                    Users (@FilteredUsers.Count())
                </p>
                <div class="overflow-x-auto">
                    <table class="w-full border-collapse text-left text-xs">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="pb-2 font-semibold pr-4">User</th>
                                <th class="pb-2 font-semibold pr-4">Role</th>
                                <th class="pb-2 font-semibold pr-4">Status</th>
                                <th class="pb-2 font-semibold pr-4">Reports</th>
                                <th class="pb-2 font-semibold pr-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            @if (!FilteredUsers.Any())
                            {
                                <tr>
                                    <td colspan="6" class="py-8 text-center text-gray-500">
                                        No users found matching your criteria.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var user in FilteredUsers)
                                {
                                    <tr>
                                        <td class="py-3 pr-4 min-w-[200px]">
                                            <div class="flex items-center space-x-3">
                                                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-semibold text-sm">
                                                    @GetInitials(user.FullName)
                                                </div>
                                                <div>
                                                    <p class="font-semibold leading-4">@user.FullName</p>
                                                    <div class="flex items-center gap-2 mt-1">
                                                        @if (!string.IsNullOrEmpty(user.StudentNumber))
                                                        {
                                                            <span class="text-[10px] border border-gray-300 rounded px-1.5 py-0.5 text-gray-600">
                                                                @user.StudentNumber
                                                            </span>
                                                        }
                                                        @if (user.Verified)
                                                        {
                                                            <i class="fas fa-check-circle text-[10px] text-green-500"></i>
                                                        }
                                                    </div>
                                                    <p class="text-[10px] text-gray-500 leading-3 mt-1">@user.Email</p>
                                                    @if (!string.IsNullOrEmpty(user.Program))
                                                    {
                                                        <p class="text-[10px] text-gray-500 leading-3">
                                                            @user.Program - @user.Year
                                                        </p>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3 pr-4 min-w-[80px]">
                                            <span class="@GetRoleBgColor(user.Role) text-white rounded-full px-2 py-0.5 text-[10px] font-semibold leading-4 select-none">
                                                @user.Role.ToLower()
                                            </span>
                                        </td>
                                        <td class="py-3 pr-4 min-w-[100px]">
                                            <div class="flex items-center gap-2">
                                                <i class="@GetStatusIcon(user.Status) text-xs"></i>
                                                <span class="@GetStatusBgColor(user.Status) text-white rounded-full px-2 py-0.5 text-[10px] font-semibold leading-4 select-none">
                                                    @user.Status.ToLower()
                                                </span>
                                            </div>
                                        </td>
                                        <td class="py-3 pr-4 min-w-[60px]">
                                            <span class="@(user.ReportsCount > 0 ? "bg-[#E11D48]" : "bg-gray-300") text-white rounded-full px-2 py-0.5 text-[10px] font-semibold leading-4 select-none">
                                                @user.ReportsCount
                                            </span>
                                        </td>
                                        <td class="py-3 pr-4 min-w-[40px]">
                                            <div class="relative">
                                                <button class="text-gray-600 hover:text-gray-800 px-2 py-1"
                                                        @onclick="@(() => ToggleDropdown(user.UserID.ToString()))"
                                                        @onclick:stopPropagation="true">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                @if (dropdownOpenUserId == user.UserID.ToString())
                                                {
                                                    <div class="absolute right-0 mt-1 w-48 bg-white border border-gray-200 rounded shadow-lg z-10">
                                                        <button class="block w-full text-left px-3 py-2 text-xs hover:bg-gray-100"
                                                                @onclick="@(() => { ViewProfile(user); dropdownOpenUserId = null; })"
                                                                @onclick:stopPropagation="true">
                                                            <i class="fas fa-eye mr-2"></i>View Profile
                                                        </button>
                                                        @if (user.Status == "Active")
                                                        {
                                                            <button class="block w-full text-left px-3 py-2 text-xs hover:bg-gray-100"
                                                                    @onclick="@(async () => { await HandleAction("ban", user); dropdownOpenUserId = null; })"
                                                                    @onclick:stopPropagation="true">
                                                                <i class="fas fa-ban mr-2"></i>Ban User
                                                            </button>
                                                        }
                                                        @if (user.Status == "Banned")
                                                        {
                                                            <button class="block w-full text-left px-3 py-2 text-xs hover:bg-gray-100"
                                                                    @onclick="@(async () => { await HandleAction("activate", user); dropdownOpenUserId = null; })"
                                                                    @onclick:stopPropagation="true">
                                                                <i class="fas fa-user-check mr-2"></i>Activate User
                                                            </button>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    }

    <!-- User Profile Modal -->
    @if (selectedUser != null)
    {
        <div class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-50 p-4 animate-fadeIn">
            <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                <!-- Header with Close Button -->
                <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4 flex justify-between items-center rounded-t-2xl">
                    <h3 class="text-xl font-bold text-white">User Profile</h3>
                    <button @onclick="CloseProfileModal" class="text-white hover:bg-white/20 p-2 rounded-lg transition-all">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>

                <!-- Content -->
                <div class="p-6">
                    <div class="space-y-6">
                        <!-- User Header -->
                        <div class="flex items-center space-x-4 pb-4 border-b border-gray-200">
                            <div class="w-20 h-20 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-2xl">
                                @GetInitials(selectedUser.FullName)
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-900">@selectedUser.FullName</h3>
                                <p class="text-sm text-gray-600">@selectedUser.Email</p>
                                <div class="flex gap-2 mt-2">
                                    <span class="@GetRoleBgColor(selectedUser.Role) text-white rounded-full px-3 py-1 text-xs font-semibold">
                                        @selectedUser.Role
                                    </span>
                                    <span class="@GetStatusBgColor(selectedUser.Status) text-white rounded-full px-3 py-1 text-xs font-semibold">
                                        @selectedUser.Status
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- User Details -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Student Number</label>
                                <p class="text-sm text-gray-900 mt-1">@(selectedUser.StudentNumber ?? "N/A")</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Program</label>
                                <p class="text-sm text-gray-900 mt-1">@(selectedUser.Program ?? "N/A")</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Year Level</label>
                                <p class="text-sm text-gray-900 mt-1">@(selectedUser.Year ?? "N/A")</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Join Date</label>
                                <p class="text-sm text-gray-900 mt-1">@selectedUser.JoinDate</p>
                            </div>
                            <div>
                                <label class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Listings Posted</label>
                                <p class="text-sm text-gray-900 mt-1">@selectedUser.ListingsCount</p>
                            </div>
                        </div>

                        <!-- Warning if user has reports -->
                        @if (selectedUser.ReportsCount > 0)
                        {
                            <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                                <div class="flex items-start gap-3">
                                    <i class="fas fa-exclamation-circle text-red-600 mt-0.5"></i>
                                    <p class="text-sm text-red-800">
                                        This user has <span class="font-bold">@selectedUser.ReportsCount</span> reports filed against them.
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</main>

@code {
    private CampusHub.Application.DTO.Admin.AdminUserDto? selectedUser = null;
    private List<CampusHub.Application.DTO.Admin.AdminUserDto> users = new();
    private CampusHub.Application.DTO.Admin.AdminUserStatsDto stats = new();
    private string selectedRole = "all";
    private string selectedStatus = "all";
    private string searchQuery = "";
    private bool isLoading = true;
    private string? dropdownOpenUserId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var usersResponse = await Http.GetFromJsonAsync<List<CampusHub.Application.DTO.Admin.AdminUserDto>>("api/admin/users");
            var statsResponse = await Http.GetFromJsonAsync<CampusHub.Application.DTO.Admin.AdminUserStatsDto>("api/admin/users/stats");

            if (usersResponse != null)
            {
                users = usersResponse;
            }

            if (statsResponse != null)
            {
                stats = statsResponse;
            }
        }
        catch (Exception ex)
        {
            await Swal.FireAsync("Error", "Failed to load user data", SweetAlertIcon.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<CampusHub.Application.DTO.Admin.AdminUserDto> FilteredUsers
    {
        get
        {
            var filtered = users.AsEnumerable();

            // Apply role filter
            if (selectedRole != "all")
            {
                filtered = filtered.Where(x => x.Role == selectedRole);
            }

            // Apply status filter
            if (selectedStatus != "all")
            {
                filtered = filtered.Where(x => x.Status == selectedStatus);
            }

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                filtered = filtered.Where(x =>
                    x.FullName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    x.Email.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    (x.StudentNumber?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false));
            }

            return filtered;
        }
    }

    private void SetRoleFilter(string role)
    {
        selectedRole = role;
        dropdownOpenUserId = null;
    }

    private void SetStatusFilter(string status)
    {
        selectedStatus = status;
        dropdownOpenUserId = null;
    }

    private void UpdateSearch(string query)
    {
        searchQuery = query;
        dropdownOpenUserId = null;
    }

    private string GetInitials(string name)
    {
        var parts = name.Split(' ');
        return string.Join("", parts.Select(p => p[0]));
    }

    private string GetRoleBgColor(string role)
    {
        return role switch
        {
            "Admin" => "bg-[#E11D48]",
            "Officer" => "bg-[#3B82F6]",
            "Alumni" => "bg-[#6B7280]",
            _ => "bg-[#8B5CF6]"
        };
    }

    private string GetStatusBgColor(string status)
    {
        return status switch
        {
            "Active" => "bg-[#0FA90F]",
            "Suspended" => "bg-[#F59E0B]",
            "Banned" => "bg-[#E11D48]",
            "Pending" => "bg-[#3B82F6]",
            _ => "bg-gray-300"
        };
    }

    private string GetStatusIcon(string status)
    {
        return status switch
        {
            "Active" => "fas fa-check-circle text-green-500",
            "Suspended" => "fas fa-exclamation-circle text-yellow-500",
            "Banned" => "fas fa-ban text-red-500",
            "Pending" => "fas fa-clock text-blue-500",
            _ => ""
        };
    }

    private void ToggleDropdown(string userId)
    {
        dropdownOpenUserId = dropdownOpenUserId == userId ? null : userId;
    }

    private void ViewProfile(CampusHub.Application.DTO.Admin.AdminUserDto user)
    {
        selectedUser = user;
    }

    private void CloseProfileModal()
    {
        selectedUser = null;
    }

    private async Task HandleAction(string actionType, CampusHub.Application.DTO.Admin.AdminUserDto user)
    {
        var title = actionType switch
        {
            "suspend" => "Suspend User",
            "ban" => "Ban User",
            "activate" => "Activate User",
            "reset" => "Reset Password",
            "promote" => "Promote to Officer",
            _ => "Confirm Action"
        };

        var message = actionType switch
        {
            "suspend" => $"Are you sure you want to suspend {user.FullName}?",
            "ban" => $"Are you sure you want to ban {user.FullName}?",
            "activate" => $"Are you sure you want to activate {user.FullName}?",
            "reset" => $"Are you sure you want to reset the password for {user.FullName}?",
            "promote" => $"Are you sure you want to promote {user.FullName} to Officer?",
            _ => "Are you sure?"
        };

        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = title,
            Text = message,
            Icon = actionType == "ban" ? SweetAlertIcon.Warning : SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Yes, proceed",
            CancelButtonText = "Cancel"
        });

        if (result.IsConfirmed)
        {
            try
            {
                HttpResponseMessage response;
                switch (actionType)
                {
                    case "ban":
                        response = await Http.PutAsync($"api/admin/users/{user.UserID}/ban", null);
                        break;
                    case "activate":
                        response = await Http.PutAsync($"api/admin/users/{user.UserID}/unban", null);
                        break;
                    case "reset":
                        response = await Http.PutAsync($"api/admin/users/{user.UserID}/reset-password", null);
                        break;
                    default:
                        await Swal.FireAsync("Error", "Invalid action", SweetAlertIcon.Error);
                        return;
                }

                if (response.IsSuccessStatusCode)
                {
                    await LoadData(); // Reload data to reflect changes
                    await Swal.FireAsync("Success", "Action completed successfully", SweetAlertIcon.Success);
                }
                else
                {
                    await Swal.FireAsync("Error", "Failed to perform action", SweetAlertIcon.Error);
                }
            }
            catch (Exception ex)
            {
                await Swal.FireAsync("Error", "An error occurred", SweetAlertIcon.Error);
            }
        }
    }
}