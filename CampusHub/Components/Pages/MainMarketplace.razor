    private void ShowMessage(string message, string type)
    {
        Message = message;
        MessageType = type;
        StateHasChanged();

        Task.Delay(5000).ContinueWith(_ => ClearMessage());
    }

    private void ClearMessage()
    {
        Message = "";
        MessageType = "";
        InvokeAsync(StateHasChanged);
    }
